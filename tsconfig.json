{
  "compilerOptions": {
    "target": "ESNext", // or "ES2020", "ES2015", etc.
    "module": "ESNext", // or "ES2020", "ES2015", etc.
    "moduleResolution": "node", 
    "declaration": true,
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}